<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form action="/tickets" method="POST">
                <div class="form-group">
                    <label for="titolo">Titolo:</label>
                    <input type="text" class="form-control" id="titolo" name="titolo">
                </div>
                <div class="form-group">
                    <label for="cliente">Cliente:</label>
                    <select id="cliente" class="form-control" name="_idCliente">
                        <option value=""></option>
                        {{#each viewModel.clientidb}}
                        <option value="{{_id}}">{{cognome}} {{nome}} | {{this._idAzienda.nomeAzienda}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="prio">Prio:</label>
                    <select id="prio" class="form-control" name="_idPrio">
                        <option value=""></option>
                        {{#each viewModel.priodb}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="task">Task:</label>
                    <select id="task" class="form-control" name="_idTask">
                        <option value=""></option>
                        {{#each viewModel.taskdb}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="tecnico">Assegna a:</label>
                    <select id="tecnico" class="form-control" name="_idTecnico">
                        <option value=""></option>
                        {{#each viewModel.tecnicidb}}
                        <option value="{{_id}}">{{cognome}} {{nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>